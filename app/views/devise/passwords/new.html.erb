<% content_for :devise_form do %>
<div class="card">
  <div class="card-header">
    Войти
  </div>
  <div class="card-body">
    <h2>Забыли пароль?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail", class: "form-control mb-3 mt-3" %>
        </div>

        <div class="actions">
          <%= f.submit t('views.devise.passwords.new'), class: "btn btn-primary mt-3" %>
        </div>
      <% end %>
  </div>

    <p><%= render "devise/shared/links" %></p> 
    <% end %>
</div>
<%= render "devise/shared/form_wrap" %>
