
<h2>Редактирование профиля</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>В настоящее время ожидание подтверждения для: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: "mb-0" %> <i>(оставьте пустым, если вы не хотите его менять)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <em><strong><%= minimum_password_length%></strong></em>

  <div class="field mt-3">
    <%= f.label :password_confirmation, class: "mb-0" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field mt-3">
    <%= f.label :current_password, class: "mb-0"%>
    <i>(нужен ваш текущий пароль, чтобы подтвердить ваши изменения)</i><br>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "Сохранить" %>
  </div>
<% end %>

<br>
<h5>Удаление аккаунта:</h5>

<p><%= button_to "Удалить мой аккаунт", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Назад", :back %>
